DECLARE
  search_value VARCHAR2(100) := 'your_search_value';
  sql_query VARCHAR2(200);
BEGIN
  FOR t IN (SELECT table_name FROM all_tables) LOOP
    FOR c IN (SELECT column_name FROM all_tab_columns WHERE table_name = t.table_name) LOOP
      sql_query := 'SELECT * FROM ' || t.table_name || ' WHERE ' || c.column_name || ' = :value';
      -- Uncomment the following line to execute the generated SQL query
      -- EXECUTE IMMEDIATE sql_query USING search_value;
    END LOOP;
  END LOOP;
END;
/

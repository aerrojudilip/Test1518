<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <title>Dropdown Menu with JSON and Bootstrap</title>
</head>

<body>

  <div class="container">
    <div class="dropdown mt-4">
      <select id="level1" class="form-control"></select>
      <select id="level2" class="form-control"></select>
      <select id="level3" class="form-control"></select>
      <select id="level4" class="form-control"></select>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function() {
      var jsonData = {
        "level1": [
          { "id": 1, "name": "Option 1" },
          { "id": 2, "name": "Option 2" },
          { "id": 3, "name": "Option 3" }
        ],
        "level2": {
          "1": [
            { "id": 4, "name": "Option 1.1" },
            { "id": 5, "name": "Option 1.2" },
            { "id": 6, "name": "Option 1.3" }
          ],
          "2": [
            { "id": 7, "name": "Option 2.1" },
            { "id": 8, "name": "Option 2.2" },
            { "id": 9, "name": "Option 2.3" }
          ],
          "3": [
            { "id": 10, "name": "Option 3.1" },
            { "id": 11, "name": "Option 3.2" },
            { "id": 12, "name": "Option 3.3" }
          ]
        },
        "level3": {
          "4": [
            { "id": 13, "name": "Option 1.1.1" },
            { "id": 14, "name": "Option 1.1.2" },
            { "id": 15, "name": "Option 1.1.3" }
          ],
          "5": [
            { "id": 16, "name": "Option 1.2.1" },
            { "id": 17, "name": "Option 1.2.2" },
            { "id": 18, "name": "Option 1.2.3" }
          ],
          "6": [
            { "id": 19, "name": "Option 1.3.1" },
            { "id": 20, "name": "Option 1.3.2" },
            { "id": 21, "name": "Option 1.3.3" }
          ]
        },
        "level4": {
          "13": [
            { "id": 22, "name": "Option 1.1.1.1" },
            { "id": 23, "name": "Option 1.1.1.2" },
            { "id": 24, "name": "Option 1.1.1.3" }
          ],
          "16": [
            { "id": 25, "name": "Option 1.2.1.1" },
            { "id": 26, "name": "Option 1.2.1.2" },
            { "id": 27, "name": "Option 1.2.1.3" }
          ],
          "19": [
            { "id": 28, "name": "Option 1.3.1.1" },
            { "id": 29, "name": "Option 1.3.1.2" },
            { "id": 30, "name": "Option 1.3.1.3" }
          ]
        }
      };

      // Populate the first level dropdown
      $.each(jsonData.level1, function(index, item) {
        $('#level1').append($('<option>', {
          value: item.id,
          text: item.name
        }));
      });

      // Handle level 1 change event
      $('#level1').on('change', function() {
        var selectedLevel1 = $(this).val();
        $('#level2').empty();
        $('#level3').empty();
        $('#level4').empty();

        $.each(jsonData.level2[selectedLevel1], function(index, item) {
          $('#level2').append($('<option>', {
            value: item.id,
            text: item.name
          }));
        });
      });

      // Handle level 2 change event
      $('#level2').on('change', function() {
        var selectedLevel2 = $(this).val();
        $('#level3').empty();
        $('#level4').empty();

        $.each(jsonData.level3[selectedLevel2], function(index, item) {
          $('#level3').append($('<option>', {
            value: item.id,
            text: item.name
          }));
        });
      });

      // Handle level 3 change event
      $('#level3').on('change', function() {
        var selectedLevel3 = $(this).val();
        $('#level4').empty();

        $.each(jsonData.level4[selectedLevel3], function(index, item) {
          $('#level4').append($('<option>', {
            value: item.id,
            text: item.name
          }));
        });
      });
    });
  </script>

</body>

</html>
